<div class="container">
  <div class='text-center d-flex justify-content-center'>
    <div class="login col-xs-12 col-xs-offset-0 col-sm-6 col-sm-offset-6">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin", data: { turbo: :false }}) do |f| %>
          <img class="mb-4" src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
          <h1 class="h3 mb-3 font-weight-normal">It's a DoggyDog World</h1>
          <%= f.label :email, class: "sr-only" %>
          <%= f.text_field :email, required: true,
            autofocus: true,
            input_html: { autocomplete: "email" },
            class: "form-control mb-1",
            placeholder: "Email address" %>
          <%= f.label :password, class: "sr-only" %>
          <%= f.password_field :password,
            required: true,
            autofocus: true,
            input_html: { autocomplete: "email" },
            class: "form-control",
            placeholder: "Password" %>
            <div class="d-flex justify-content-between">
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
            <% end %>
          </div>
        <div class="form-actions d-flex justify-content rounded">
          <%= f.submit "Log in", class:"btn btn-lg btn-primary btn-block border-radius-10" %>
        </div>
          <p class="mt-5 mb-3 text-muted">Â© 2022-2023</p>
      <% end %>
    </div>
  </div>
</div>
