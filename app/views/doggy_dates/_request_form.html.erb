<div id="message-<%= message.id %>">
  <small>
    <strong><%= message.user.first_name %></strong>
    <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
  </small>
  <p><%= message.content %></p>
  <%# If @doggy_date attached? && message.user != current_user  %>
  <%# Render card with an accept/decline path to pending %>
  <%# elseif @doggy_date attached? && message.user == current_user  %>
  <%# Render same card without accept/decline path %>
  <p><%= link_to "Accept?", match_doggy_date_path(match, message.doggy_date, doggy_date:{ status: "accepted" }), data: {turbo_method: "PATCH"} %></p>
  <p><%= link_to "Decline?", match_doggy_date_path(match, message.doggy_date, doggy_date:{ status: "declined" }), data: {turbo_method: "PATCH"} %></p>
</div>
